# Production Environment Configuration Template
# Copy this file to .env.production and fill in your actual values
# NEVER commit the actual .env.production file to version control

# Database Configuration
DATABASE_URL=postgresql://<username>:<password>@<host>:<port>/<database>

# Security Keys - Generate using: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=<generate-a-secure-64-character-hex-string>
SESSION_SECRET_KEY=<generate-another-secure-64-character-hex-string>
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google OAuth Configuration
GOOGLE_CLIENT_ID=<your-google-client-id>
GOOGLE_CLIENT_SECRET=<your-google-client-secret>

# Environment Settings
ENVIRONMENT=production
LOG_LEVEL=INFO

# Frontend Configuration
FRONTEND_URL=https://specsharp.ai

# Redis Configuration (if using Redis)
REDIS_URL=redis://<redis-host>:6379

# Stripe Configuration (if using payments)
STRIPE_SECRET_KEY=<your-stripe-secret-key>
STRIPE_WEBHOOK_SECRET=<your-stripe-webhook-secret>

# CORS Origins (JSON array format)
CORS_ORIGINS=["https://specsharp.ai", "https://www.specsharp.ai"]

# Additional Security Settings
SECURE_COOKIES=true
CSRF_SECRET=<generate-a-secure-32-character-string>