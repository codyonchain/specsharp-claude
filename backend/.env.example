# SpecSharp Backend Environment Configuration
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control

# Database Configuration
# For production, use PostgreSQL with SSL
DATABASE_URL=postgresql://username:password@localhost:5432/specsharp
# For development, you can use SQLite
# DATABASE_URL=sqlite:///./specsharp.db

# Security - MUST CHANGE THESE!
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars
SESSION_SECRET_KEY=your-session-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment Settings
ENVIRONMENT=development  # Options: development, staging, production
LOG_LEVEL=INFO

# Frontend URL
FRONTEND_URL=http://localhost:3000  # Change to your production domain

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Supabase (Required for auth + tenant isolation)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
ALLOW_AUTO_ORG_PROVISIONING=true
DEFAULT_DEAL_RUNS=3
UNLIMITED_ACCESS_EMAILS=

# Redis Configuration (Optional, for caching)
REDIS_URL=redis://localhost:6379

# Stripe Configuration (Optional, for payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# CORS Origins (comma-separated for production)
# CORS_ORIGINS=https://specsharp.ai,https://www.specsharp.ai

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
AUTH_RATE_LIMIT_PER_MINUTE=5

# API Documentation (set to false in production)
ENABLE_DOCS=true

# OpenAI/Anthropic API Keys (Optional)
# OPENAI_API_KEY=sk-your-openai-key
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
